---
import Maps from "~/components/maps/Brazil.astro";
import EstadoLayout from "~/layouts/EstadoLayout.astro";
import db from "./estados.json";

//console.log(JSON.stringify(db));
export function getStaticPaths() {
  const paths = db?.map((db) => ({ params: { UF: db.UF } }));
  return paths;
}
//console.log(Astro.params);
const { UF } = Astro.params;

//const index = ufData.findIndex((uf) => uf.sigla === UF);
const index: any = db?.findIndex((item) => item.UF === UF);
const uf = db[index];

const bandeira = `/states/${uf.UF}-bandeira.svg`;
const brasao = `/states/${uf.UF}-brasao.svg`;

import ListUF from "~/components/ListUF.astro";
---

<EstadoLayout>
  <div class="prose prose-sm mx-auto p-4 text-center font-black leading-none">
    <h1 class="mb-0">{uf.Name} - {uf.UF}</h1>
    <span>
      <small>Capital: {uf.Capital}</small>
      <br />
      <small>Região {uf.Region}</small>
    </span>
  </div>
  <section class="flex flex-col justify-center px-4 xl:flex-row xl:px-0">
    <section class="flex flex-col gap-y-8 p-8 xl:w-1/3">
      <article class="flex flex-col gap-8">
        <div>
          <a href={bandeira} data-fancybox="gallery">
            <img
              class="float-left w-64 max-w-screen-lg p-4 drop-shadow transition-all hover:z-10 hover:scale-105 active:z-10 active:scale-105"
              src={bandeira}
              alt=`Bandeira ${uf.UF}`
            />
          </a>
          <div class="prose xl:mt-8">
            <p><strong>Bandeira</strong><br />Significado: {uf.Flag}</p>
          </div>
        </div>
      </article>
      <article class="flex flex-row justify-start gap-8 xl:flex-col">
        <div class="gallerye">
          <a href={brasao} data-fancybox="gallery">
            <img
              class="float-right w-64 max-w-screen-lg drop-shadow transition-all hover:z-10 hover:scale-105 active:z-10 active:scale-105"
              src={brasao}
              alt=`Brasão ${uf.UF}`
            />
          </a>
          <div class="prose xl:mt-8">
            <p><strong>Brasão</strong><br />Significado: {uf.Coat}</p>
          </div>
        </div>
      </article>
    </section>
    <section id="selectState">
      <div class="eblock exl:hidden"><ListUF /></div>
      <div class="ehidden exl:block">
        <Maps />
      </div>
    </section>
  </section>

  <script>
    import { Fancybox } from "@fancyapps/ui";
    import "@fancyapps/ui/dist/fancybox/fancybox.css";

    const options = {
      Images: {
        initialSize: "full",
      },
    };

    Fancybox.bind("[data-fancybox]", {
      Images: {
        initialSize: "fit",
        Panzoom: {
          maxScale: 1.5,
          decelFriction: 0.25,
        },
      },
    });
  </script>
</EstadoLayout>
