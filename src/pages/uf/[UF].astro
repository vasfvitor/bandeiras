import ufData from "./data.json";
import Estado from "~/layouts/Estado.astro";
export function getStaticPaths() {
  // Mapeie os dados do JSON para criar o array de `params`
  const paths = ufData.map((uf) => ({ params: { UF: uf.sigla } }));
  return paths;
}
