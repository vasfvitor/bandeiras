---
import BaseHead from "~/components/BaseHead.astro";
import Header from "~/components/Header.astro";
import Footer from "~/components/Footer.astro";

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <link href="/lightbox/lightbox.css" rel="stylesheet" />
    <BaseHead title={title} description={description} />
  </head>
  <body class="bg-white">
    <Header />
    <hr />
    <main class="my-8 bg-gray-100 shadow rounded container mx-auto border py-20">
      <hr />
      <slot />
      <hr />
    </main>
    <Footer />
    <script is:inline src="/lightbox/lightbox-plus-jquery.js"></script>

    <script>
      lightbox.option({
        resizeDuration: 150,
        fadeDuration: 200,
        positionFromTop: 0,
        wrapAround: true,
      });
    </script>
  </body>
</html>
