---
import type { CollectionEntry } from "astro:content";
import BaseHead from "~/components/BaseHead.astro";
import Header from "~/components/Header.astro";
import Footer from "~/components/Footer.astro";
import FormattedDate from "~/components/FormattedDate.astro";
import Maps from "~/maps/index.astro";
type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, flagImage, coatImage } =
  Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="flex flex-row">
          {flagImage && <img width={720} height={360} src={flagImage} alt="" />}
          {coatImage && <img width={720} height={360} src={coatImage} alt="" />}
        </div>
        <h1 class="title">{title}</h1>
      
        <hr />
        <slot />
      </article>
      <Maps />
    </main>
    <Footer />
  </body>
</html>
